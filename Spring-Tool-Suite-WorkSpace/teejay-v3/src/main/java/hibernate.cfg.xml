<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
		<property name="hibernate.connection.url">jdbc:sqlite:teejay-lite.db</property>
		<property name="hibernate.dialect">com.sandy.demo.dialect.SQLDialect</property>
		<property name="hibernate.username">admin</property>
		<property name="hibernate.password">admin</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="hibernate.show_sql">true</property>
		
	</session-factory>
</hibernate-configuration>


